---
import { fullName, summary, location, socialNetworks, name, email } from "@cv";
import SocialCard from "./SocialCard.astro";
---

<section
  class="max-w-[700px] bg-custom-dark rounded-3xl px-8 py-12 mx-2 md:mx-auto mb-12"
>
  <h1 class="text-4xl font-bold mb-4 text-indigo-400">Hola, soy {fullName}</h1>
  <h2 class="mb-2">{summary}</h2>

  <span class="flex gap-1 items-center text-sm">
    <img
      src="/images/pin-de-mapa.png"
      class="size-4"
      alt="Icono de pin de mapa"
    />
    {location}</span
  >

  <div class="flex flex-wrap gap-4 mt-8">
    {
      socialNetworks.map(social => (
        <SocialCard
          {...social}
          title={`Visitar el perfil de ${name} en ${social.network}`}
        />
      ))
    }
    <SocialCard
      network="Correo"
      iconUrl="/images/email.png"
      url={`mailto:${email}`}
      title={`Enviar un correo electrÃ³nico a ${name}`}
    />
  </div>
</section>
